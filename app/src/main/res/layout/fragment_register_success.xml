<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainTheme.MaxScreen"
    android:orientation="vertical"
    tools:context=".View.LoginView.Activity.adapter.RegisterSuccessFragment">

    <TextView
        style="@style/MainTheme.Title"
        android:gravity="center"
        android:paddingStart="0dp"
        android:textSize="25sp"
        android:textColor="#4CAF50"
        android:text="Đăng ký thành công"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/check" />

    <TextView
        style="@style/MainTheme.Title"
        android:text="Chào mừng bạn đến với Now Food"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnLogin"
        style="@style/MainTheme.MaxWidth.ButtonLogin"
        android:textSize="15sp"
        android:text="Đăng nhập ngay để đặt món" />

</LinearLayout>