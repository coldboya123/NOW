<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainTheme.MaxScreen"
    android:background="@drawable/outline_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/block_title"
        style="@style/MainTheme.MaxWidth"
        android:background="@color/primary_color3"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/city"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="Tỉnh/Thành"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/district"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="Quận/Huyện"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ward"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="Phường/Xã"
            android:visibility="gone" />
    </LinearLayout>

    <SearchView
        android:id="@+id/search"
        style="@style/MainTheme.MaxWidth.SearchBar"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        style="@style/MainTheme.MaxWidth"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp" />
</LinearLayout>