<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainTheme.MaxScreen"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.ShopView.TabView.Comment.view.ShopCommentFragment">

    <LinearLayout
        android:id="@+id/blockRating"
        style="@style/MainTheme.MaxWidth"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/averageRate"
                style="@style/MainTheme.Title"
                android:gravity="center"
                android:paddingStart="0dp"
                android:text="5.0"
                android:textSize="25sp" />

            <com.example.now.CustomComponent.SvgRatingBar
                android:id="@+id/avarageRating"
                style="@style/MainTheme.CustomRatingBar"
                android:layout_gravity="center_horizontal"
                android:rating="5" />

            <TextView
                android:id="@+id/totalRating"
                style="@style/MainTheme.TextSmall"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="500 nhận xét" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                style="@style/MainTheme.MaxWidth"
                android:orientation="horizontal">

                <com.example.now.CustomComponent.SvgRatingBar
                    style="@style/MainTheme.CustomRatingBar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress5"
                    style="@style/MainTheme.ProgressBar" />

                <TextView
                    android:id="@+id/num5"
                    style="@style/MainTheme.TextRating"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                style="@style/MainTheme.MaxWidth"
                android:orientation="horizontal">

                <com.example.now.CustomComponent.SvgRatingBar
                    style="@style/MainTheme.CustomRatingBar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress4"
                    style="@style/MainTheme.ProgressBar" />

                <TextView
                    android:id="@+id/num4"
                    style="@style/MainTheme.TextRating"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                style="@style/MainTheme.MaxWidth"
                android:orientation="horizontal">

                <com.example.now.CustomComponent.SvgRatingBar
                    style="@style/MainTheme.CustomRatingBar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress3"
                    style="@style/MainTheme.ProgressBar" />

                <TextView
                    android:id="@+id/num3"
                    style="@style/MainTheme.TextRating"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                style="@style/MainTheme.MaxWidth"
                android:orientation="horizontal">

                <com.example.now.CustomComponent.SvgRatingBar
                    style="@style/MainTheme.CustomRatingBar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress2"
                    style="@style/MainTheme.ProgressBar" />

                <TextView
                    android:id="@+id/num2"
                    style="@style/MainTheme.TextRating"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                style="@style/MainTheme.MaxWidth"
                android:orientation="horizontal">

                <com.example.now.CustomComponent.SvgRatingBar
                    style="@style/MainTheme.CustomRatingBar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress1"
                    style="@style/MainTheme.ProgressBar" />

                <TextView
                    android:id="@+id/num1"
                    style="@style/MainTheme.TextRating"
                    android:gravity="center"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/gray_2" />

    <LinearLayout
        android:id="@+id/blockNoComment"
        style="@style/MainTheme.MaxWidth"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="30dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_comments" />

        <TextView
            style="@style/MainTheme.Title"
            android:gravity="center_horizontal"
            android:text="@string/txtNoComment" />

        <TextView
            style="@style/MainTheme.TextSmall"
            android:text="@string/txtOrderNow"
            android:textColor="@color/gray" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/MainTheme.MaxWidth" />

</LinearLayout>